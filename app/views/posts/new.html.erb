<h1>New Post</h1>

<form action="/posts" method="post">
  <%= csrf_meta_tags %>

  <p>
    <label>Author</label><br>
    <input type="text" name="author">
  </p>

  <p>
    <label>Body</label><br>
    <textarea name="body"></textarea>
  </p>

  <p>
    <label>Image URL</label><br>
    <input type="text" name="image">
  </p>

  <p>
    <input type="submit" value="Create Post">
  </p>
</form>
